<Window x:Class="Ciberdon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="626" d:DesignWidth="691" SizeToContent="WidthAndHeight">

    <Window.Resources>
        <DropShadowEffect x:Key="shadowWindow"
        Color="Black"
        Opacity=".75"
        ShadowDepth="12" />
    </Window.Resources>
    <Border 
    CornerRadius="10"
  
    Effect="{StaticResource shadowWindow}"
    Margin="24"
    Padding="24" >


        <Grid Background="LightGray">
            <TextBox  TextChanged="TextBox_TextChanged" />
        <Button Content="Button" Height="33" HorizontalAlignment="Left" Margin="480,450,0,0" Name="button1" VerticalAlignment="Top" Width="85" Click="button1_Click" />
    </Grid>
        
    </Border>
</Window>
